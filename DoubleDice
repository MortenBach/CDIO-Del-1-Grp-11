package terning;
//De rigtige navne skal sættes ind, og vi skal lige sikre os, hvorhenne summen bliver lagt til hinanden.
public class DoubleDice {
	
	int d1, d2; //Terningerne skal indsættes.
	boolean doubSixes = false; //Variable, der tjekker om der har været double6 i sidste kast.
	
	
	if (d1 == d2){ //Hele metoden kører først, hvis doublekast
		if (d1== 1){ //Checker 1'er
			currentPlayer.setSum(0);
			doubSixes = false;
			//repeattur
		}
		else if (d1 == 6){ //Checker 6'ere
			if (doubSixes == true){ //Checker om sidste kast, var en double6
				winGame(currentPlayer);
			}
			else{ //Afmærker, at kastet var en double 6
				doubSixes = true;
				//repeattur
			}
		}
		else{ //Gentager bare tur
			doubSixes = false;
			//repeattur
		}
	}
	else{ //Muligvis sumfunktion skal lige snakkes.
		setSum(d1 + d2);
		nextPlayer();
	}
						
			
}
	
